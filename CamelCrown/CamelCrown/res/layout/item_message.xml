<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textColor="#898989"
        android:textSize="18sp"
        android:text="2015-3-17"
        />

    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/alpha"
        android:background="#ffffff"
        android:padding="5dip" 
        android:layout_marginTop="1px" >

        <ImageView
            android:id="@+id/img_message_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/default_head" />

        <RelativeLayout
            android:id="@+id/ll_watch_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_message_icon"
            android:layout_alignTop="@id/img_message_icon"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/img_message_icon" >

            <TextView
                android:id="@+id/tv_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center|left"
                android:text="警告：电量剩余20%"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_message"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#eeeeee" />

</RelativeLayout>