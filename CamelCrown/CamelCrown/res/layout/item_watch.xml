<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
         >

        <ImageView
            android:id="@+id/img_watch_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/default_head" />

        <RelativeLayout
            android:id="@+id/ll_watch_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_watch_icon"
            android:layout_alignTop="@id/img_watch_icon"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/img_watch_icon" 
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_watch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssss"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_watch_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_watch_name"
                android:text="ssss"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_watch_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_watch_address"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_watch_name"
                android:gravity="center|right"
                android:text="ssss"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>
    <View 
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_watch"/>

</RelativeLayout>