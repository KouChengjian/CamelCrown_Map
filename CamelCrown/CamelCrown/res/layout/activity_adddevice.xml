<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    
    <RelativeLayout
        android:id="@+id/rl_add_device_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_add_device_again"
        android:layout_below="@+id/common_actionbar"
        android:padding="10dp" >
        <ImageView 
            android:id="@+id/iv_add_device_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/matching_device_bg"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tv_add_device_again"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:background="@drawable/selector_logout"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip"
        android:text="匹配设备" 
        android:textColor="#ffffff"/>

</RelativeLayout>