<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f3f8" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_actionbar" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rl_call_electricity"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/rl_call_electricity_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:padding="2dp" >

                    <ImageView
                        android:id="@+id/iv_call_electricity_header"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/call_electricity_icon" />

                    <TextView
                        android:id="@+id/tv_call_electricity_header"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iv_call_electricity_header"
                        android:gravity="center|left"
                        android:text="低电报警"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_call_electricity_header_time"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_call_electricity_header"
                        android:gravity="center|right"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_electricity_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/rl_call_electricity_header"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/rl_call_electricity_header"
                    android:background="@drawable/call_electricity_bg" >

                    <ImageView
                        android:id="@+id/rl_call_electricity_body_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/call_electricity_logo" />

                    <TextView
                        android:id="@+id/tv_call_electricity_body_text"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/rl_call_electricity_body_icon"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/rl_call_electricity_body_icon"
                        android:gravity="center|left"
                        android:text="电量过低"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_call_electricity_body_text_1"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/tv_call_electricity_body_text"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_call_electricity_body_text"
                        android:gravity="center|left"
                        android:text="请记得给设备充电"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_call_sos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_call_electricity"
                android:layout_marginTop="10dp"
                android:padding="10dp" 
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_call_sos_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:padding="2dp" >

                    <ImageView
                        android:id="@+id/iv_call_sos_header"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/call_sos_icon" />

                    <TextView
                        android:id="@+id/tv_call_sos_header"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iv_call_sos_header"
                        android:gravity="center|left"
                        android:text="SOS求救报警"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_call_sos_header_time"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_call_sos_header"
                        android:gravity="center|right"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_sos_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/rl_call_sos_header"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/rl_call_sos_header"
                    android:background="@drawable/call_sos_bg" >

                    <ImageView
                        android:id="@+id/iv_call_sos_body_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/call_sos_logo" />

                    <TextView
                        android:id="@+id/tv_call_sos_body_text"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/iv_call_sos_body_icon"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/iv_call_sos_body_icon"
                        android:gravity="center|left"
                        android:text="SOS报警提醒"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_call_sos_body_text_1"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/tv_call_sos_body_text"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_call_sos_body_text"
                        android:gravity="center|left"
                        android:text="请确定设备是否安全"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_call_in"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_call_sos"
                android:layout_marginTop="10dp"
                android:padding="10dp" 
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/rl_call_in_header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff"
                    android:padding="2dp" >

                    <ImageView
                        android:id="@+id/iv_call_in_header"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/call_in_icon" />

                    <TextView
                        android:id="@+id/tv_call_in_header"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iv_call_in_header"
                        android:gravity="center|left"
                        android:text="到达提醒"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_call_in_header_time"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_call_in_header"
                        android:gravity="center|right"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_in_body"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/rl_call_in_header"
                    android:background="@drawable/call_in_out_bg" >

                <RelativeLayout
                    android:id="@+id/rl_call_in_body_addr"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/call_in_out_text_bg" >
                    <TextView 
                        android:id="@+id/tv_call_in_body_addr"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="深圳市南山区科技园"
                        android:gravity="center|left"
                        android:textSize="16sp"/>
                </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_in_foot"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" 
                    android:background="#ffffff"
                    android:visibility="gone">
                   <TextView 
                        android:id="@+id/tv_call_in_foot"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="深圳市南山区科技园"
                        android:gravity="center|left"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_call_out"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_call_in"
                android:layout_marginTop="10dp"
                android:padding="10dp" 
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/rl_call_out_header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff"
                    android:padding="2dp"  >

                    <ImageView
                        android:id="@+id/iv_call_out_header"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/call_out_icon" />

                    <TextView
                        android:id="@+id/tv_call_out_header"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iv_call_out_header"
                        android:gravity="center|left"
                        android:text="出发提醒"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_call_out_header_time"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_call_out_header"
                        android:gravity="center|right"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_out_body"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/rl_call_out_foot"
                    android:layout_below="@+id/rl_call_out_header"
                    android:background="@drawable/call_in_out_bg" >
<RelativeLayout
                    android:id="@+id/rl_call_out_body_addr"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/call_in_out_text_bg" >
                    <TextView 
                        android:id="@+id/tv_call_out_body_addr"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="深圳市南山区科技园"
                        android:gravity="center|left"
                        android:textSize="16sp"/>
                </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_out_foot"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" >
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>